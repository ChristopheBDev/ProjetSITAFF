                                                            Width="Auto" 
                                                            Binding="{Binding Path=Intitule, Mode=OneWay}"
                                                                    />

                                    <DataGridTextColumn Header="Evenement" 
                                                            Width="Auto" 
                                                            Binding="{Binding Path=Evenement, Mode=OneWay}"
                                                                    />
                                </DataGrid.Columns>

                            </DataGrid>
                            <Grid
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Button 
                        Content="Ajouter"
                        x:Name="_ButtonNoteAjouter"
                        Grid.Row="1"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonNoteAjouter_Click"
                        >
                                </Button>

                                <Button 
                        Content="Afficher"
                        x:Name="_ButtonNoteAfficher"
                        Grid.Row="2"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonNoteAfficher_Click"
                        >
                                </Button>

                                <Button 
                        Content="Supprimer"
                        x:Name="_ButtonNoteSupprimer"
                        Grid.Row="5"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonNoteSupprimer_Click"
                        
                        >
                                </Button>
                            </Grid>
                        </Grid.Children>
                    </Grid>
                </TabItem>

                <TabItem Header="Documents">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.Children>
                            <DataGrid
                                  x:Name="_dataGridAppelOffreDocument"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="false"
                                  GridLinesVisibility="None"
                                  ItemsSource="{Binding Path=Document_Appel_Offre}"
                                  >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Libelle" 
                                                            Width="Auto" 
                                                            Binding="{Binding Path=Libelle, Mode=OneWay}"
                                                                    />

                                    <DataGridTextColumn Header="Commentaire" 
                                                            Width="Auto" 
                                                            Binding="{Binding Path=Commentaire, Mode=OneWay}"
                                                                    />

                                    <DataGridTextColumn Header="Chemin" 
                                                            Width="Auto" 
                                                            Binding="{Binding Path=Chemin, Mode=OneWay}"
                                                                    />

                                    <DataGridTextColumn Header="Appel d'offre" 
                                                            Width="Auto" 
                                                            Binding="{Binding Path=Appel_Offre1, Mode=OneWay}"
                                                                    />
                                </DataGrid.Columns>
                                
                            </DataGrid>
                            <Grid
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="5"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Button 
                        Content="Ajouter"
                        x:Name="_ButtonDocumentAjouter"
                        Grid.Row="1"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonDocumentAjouter_Click"
                        >
                                </Button>

                                <Button 
                        Content="Supprimer"
                        x:Name="_ButtonDocumentSupprimer"
                        Grid.Row="5"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonDocumentSupprimer_Click"
                        
                        >
                                </Button>
                            </Grid>
                        </Grid.Children>
                    </Grid>
                </TabItem>
            </TabControl>
            <!--  Nouveau Grid pour boutons Ok/Annuler  -->
            <Grid Grid.Row="2" Grid.Column="1">
                <!--  Définition des colonnes  -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"></ColumnDefinition>
                    <ColumnDefinition Width="50*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--  Fin Définition des colonnes  -->
                <!--  Contenu du Grid2  -->
                <Grid.Children>
                    <Button 
                        Content="Ok"
                        x:Name="_ButtonOk" 
                        Grid.Column="0"  
                        Margin="10" 
                        Height="40"
                        IsDefault="True" Click="_ButtonOk_Click">
                    </Button>
                    <Button 
                        Content="Annuler"
                        x:Name="_ButtonCancel" 
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        IsCancel="True" Click="_ButtonCancel_Click">
                    </Button>
                </Grid.Children>
                <!--  Fin Contenu du Grid2  -->
            </Grid>
            <!--  Fin Nouveau Grid pour boutons Ok/Annuler  -->
        </Grid.Children>
    </Grid>
</Window>
