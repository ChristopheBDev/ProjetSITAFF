<Window x:Class="SitaffRibbon.Windows.AppelOffreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SitaffRibbon.Windows"
        xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
        Title="Appel d'Offre" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" Icon="..\Images\icone-appeloffres-large.png" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <!--  Definition des colonnes  -->
        <Grid.Children>
            <TabControl Grid.Row="1" Grid.Column="1">
                <TabItem Header="Infos générales">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--  Fin Definition des colonnes  -->
                        <!--  Definition des lignes  -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--  Fin Definition des lignes  -->
                        <!--  Contenu du Grid  -->
                        <Grid.Children>
                            <GroupBox x:Name="_groupBoxInfoGeneralesGroupeSIT" Header="Groupe SIT" Grid.Row="0" Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="100*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreEntreprise"
                Text="Entreprise Mère :"
                Grid.Row="0" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <ComboBox 
                x:Name="_ComboBoxAppelOffreEntreprise" 
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="2" 
                SelectedItem="{Binding Path=Entreprise_Mere}" 
                DisplayMemberPath="Libelle"                 
                ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:AppelOffreWindow}}, Path=entrepriseList}" >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <!-- -->

                                        <!-- -->
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreReçu"
                Text="Reçu par :"
                Grid.Row="1" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <ComboBox 
                x:Name="_ComboBoxAppelOffreReçu" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2" 
                SelectedItem="{Binding Path=Groupe}" 
                DisplayMemberPath="Libelle" 
                >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <!-- -->

                                        <!-- -->
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreCommentGroupeSIT"
                Text="Comment :"
                Grid.Row="2" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <ComboBox 
                x:Name="_ComboBoxAppelOffreCommentGroupeSIT" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2" 
                SelectedItem="{Binding Path=Groupe}" 
                DisplayMemberPath="Libelle" 
                >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <!-- -->

                                        <!-- -->
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreDate"
                Text="Date :"
                Grid.Row="3" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                                        </TextBlock>
                                        
                                        <DatePicker 
                        SelectedDate="{Binding Path=Date_Envoi}" 
                        Grid.Row="3" 
                        Grid.Column="1" 
                        x:Name="_datePickerAppelOffreDateGroupe">
                                        </DatePicker>

                                        <!-- -->

                                        <!-- -->
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreAffecté"
                Text="Affecté à :"
                Grid.Row="4" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                                        </TextBlock>


                                        <ComboBox 
                x:Name="_ComboBoxAppelOffreAffecté" 
                Grid.Row="4" 
                Grid.Column="1" 
                Margin="2" 
                SelectedItem="{Binding Path=Groupe}" 
                DisplayMemberPath="Libelle" 
                >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                    </Grid.Children>
                                </Grid>
                            </GroupBox>
                            <GroupBox x:Name="_groupBoxInfoGeneralesSuivi" Header="Suivi" Grid.Row="0" Grid.Column="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="100*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreEtat"
                Text="Etat :"
                Grid.Row="0" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <ComboBox 
                x:Name="_ComboBoxAppelOffreEtat" 
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="2" 
                SelectedItem="{Binding Path=Appel_Offre}" 
                DisplayMemberPath="Etat" ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:AppelOffreWindow}}, Path=etatList}" >
                                            >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <!-- -->

                                        <!-- -->
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreChargéAffaire"
                Text="Chargé d'Affaire :"
                Grid.Row="1" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <TextBox 
                x:Name="_TextBoxAppelOffreChargéAffaires" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2" 
                Text="{Binding Path=Libelle, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAppelOffreChargéAffaires_TextChanged" 
                ></TextBox>
                                        <!-- -->

                                        <!-- -->

                                        <TextBlock 
                x:Name="_TextBlockAppelOffreRefus"
                Text="Refus :"
                Grid.Row="2" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <TextBox 
                x:Name="_TextBoxAppelOffreRefus" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2" 
                Text="{Binding Path=Motif_Refus, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAppelOffreRefus_TextChanged" 
                ></TextBox>

                                        <!-- -->

                                        <!-- -->

                                        <TextBlock 
                x:Name="_TextBlockAppelOffreDateRefus"
                Text="Date Refus :"
                Grid.Row="3" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                
                                        <DatePicker 
                        SelectedDate="{Binding Path=Date_Envoi}" 
                        Grid.Row="3" 
                        Grid.Column="2" 
                        x:Name="_datePickerAppelOffreDateRefus">
                                        </DatePicker>

        

                                        <!-- -->
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreCommentSuivi"
                Text="Comment :"
                Grid.Row="4" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <ComboBox 
                x:Name="_ComboBoxAppelOffreCommentSuivi" 
                Grid.Row="4" 
                Grid.Column="1" 
                Margin="2" 
                SelectedItem="{Binding Path=Groupe}" 
                DisplayMemberPath="Libelle" 
                >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                    </Grid.Children>
                                </Grid>
                            </GroupBox>
                            <GroupBox x:Name="_groupBoxInfoGeneralesTravaux" Header="Travaux" Grid.Row="2" Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="100*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <TextBlock 
                x:Name="_TextBlockAppelOffreNatureTravaux"
                Text="Nature des travaux :"
                Grid.Row="0" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <TextBox 
                x:Name="_TextBoxAppelOffreNatureTravaux" 
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="2" 
                Text="{Binding Path=Nature_Travaux, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAppelOffreNatureTravaux_TextChanged" 
                ></TextBox>

                                        <TextBlock 
                x:Name="_TextBlockAppelOffreLieuTravaux"
                Text="Lieu des travaux :"
                Grid.Row="1" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <TextBox 
                x:Name="_TextBoxAppelOffreLieuTravaux" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2" 
                Text="{Binding Path=Lieu_Travaux, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAppelOffreLieuTravaux_TextChanged" 
                ></TextBox>

                                        <TextBlock 
                x:Name="_TextBlockAppelOffreCommentaires"
                Text="Commentaires :"
                Grid.Row="2" 
                Grid.Column="0"
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <TextBox 
                x:Name="_TextBoxAppelOffreCommentaires" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2" 
                TextWrapping="Wrap"
                AcceptsReturn="True"
                Text="{Binding Path=Commentaire_Travaux, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAppelOffreCommentaires_TextChanged" 
                ></TextBox>

                                    </Grid.Children>
                                </Grid>
                            </GroupBox>
                        </Grid.Children>
                    </Grid>

                </TabItem>

                <TabItem Header="Client">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                            <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                            <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--  Fin Definition des colonnes  -->
                        <!--  Definition des lignes  -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--  Fin Definition des lignes  -->
                        <!--  Contenu du Grid  -->
                        <Grid.Children>
                            <Grid Row="1" Column="1">
                            <GroupBox x:Name="_GroupBoxClientPrincipal" Header="Client principal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                                        <ColumnDefinition Width="5*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="5*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <TextBlock 
                Text="Nom :"
                x:Name="_TextBlockClientPrincipalNom" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                        <ComboBox
                x:Name="_ComboBoxClientPrincipalNom" 
                Grid.Row="1" 
                Grid.Column="2" 
                Margin="2" 
                SelectedItem="{Binding Path=Type}" 
                DisplayMemberPath="Libelle" 
                         >
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <TextBlock 
                Text="Groupe :"
                x:Name="_TextBlockClientPrincipalGroupe" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxClientPrincipalGroupe" 
                Grid.Row="2" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalGroupe_TextChanged"
                >

                                            </TextBox>

                                            <TextBlock 
                Text="Adresse :"
                x:Name="_TextBlockClientPrincipalAdresse" 
                Grid.Row="3" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxClientPrincipalAdresse" 
                Grid.Row="3" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalAdresse_TextChanged"
                >
                                            </TextBox>

                                            <TextBlock 
                Text="Ville :"
                x:Name="_TextBlockClientPrincipalVille" 
                Grid.Row="4" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxClientPrincipalVille" 
                Grid.Row="4" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalVille_TextChanged"
                >
                                            </TextBox>

                                            <TextBlock 
                Text="CP :"
                x:Name="_TextBlockClientPrincipalCP" 
                Grid.Row="5" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxClientPrincipalCP" 
                Grid.Row="5" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalCP_TextChanged"
                >
                                            </TextBox>

                                            <TextBlock 
                Text="Tél :"
                x:Name="_TextBlockClientPrincipalTél" 
                Grid.Row="6" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxClientPrincipalTel" 
                Grid.Row="6" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalTel_TextChanged"
                >
                                            </TextBox>

                                            <TextBlock 
                Text="Fax :"
                x:Name="_TextBlockClientPrincipalFax" 
                Grid.Row="7" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                        </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxClientPrincipalFax" 
                Grid.Row="7" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalFax_TextChanged"
                >
                                            </TextBox>
                                        </Grid.Children>
                                </Grid>
                            </GroupBox>
                            </Grid>
                            
                            <Grid Row="3" Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5*"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="5*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.Children>
                                    <TextBlock 
                Text="Secteur d'activité :"
                x:Name="_TextBlockClientPrincipalSecteurActivité" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                    </TextBlock>

                                    <ComboBox
                x:Name="_TextBoxClientPrincipalSecteurActivité" 
                Grid.Row="1" 
                Grid.Column="2" 
                Margin="2" 
                SelectedItem="{Binding Path=Type}" 
                DisplayMemberPath="Libelle" 
                         >
                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel/>
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>
                                    </ComboBox>

                                    <TextBlock 
                Text="Référence AO"
                x:Name="_TextBlockClientPrincipalRéférenceAO" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                    </TextBlock>

                                    <TextBox 
                x:Name="_TextBoxClientPrincipalRéférenceAO" 
                Grid.Row="2" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Reference, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxClientPrincipalRéférenceAO_TextChanged">
                                    </TextBox>

                                </Grid.Children>
                            </Grid>

                            <Grid Row="1" Column="2">
                                <GroupBox x:Name="_GroupBoxAdresseFacturation" Header="Adresse de facturation">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                                            <ColumnDefinition Width="5*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5*"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="5*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.Children>
                                            <TextBlock 
                Text="Nom :"
                x:Name="_TextBlockAdrFacturationNom" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>

                                            <!--<CheckBox
                Grid.Row="3"
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="right"
                                Margin="5"
                >
                                            </CheckBox>-->

                                            <ComboBox 
                x:Name="_ComboBoxAdrFacturationNom" 
                Grid.Row="1" 
                Grid.Column="2" 
                Margin="2" 
                SelectedItem="{Binding Path=Type}" 
                DisplayMemberPath="Libelle" 
                >
                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel/>
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>

                                            <TextBlock 
                Text="Adresse :"
                x:Name="_TextBlockAdrFacturationAdresse" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxAdresseFacturationAdresse" 
                Grid.Row="2" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAdresseFacturation_TextChanged"
                >
                                            </TextBox>
                                            <TextBlock 
                Text="Ville :"
                x:Name="_TextBlockAdrFacturationVille" 
                Grid.Row="3" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxAdresseFacturationVille" 
                Grid.Row="3" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAdresseFacturationVille_TextChanged"
                >
                                            </TextBox>
                                            <TextBlock 
                Text="Code Postal :"
                x:Name="_TextBlockAdrFacturationCP" 
                Grid.Row="4" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>
                                            <TextBox 
                x:Name="_TextBoxAdresseFacturationCP" 
                Grid.Row="4" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAdresseFacturationCP_TextChanged"
                >
                                            </TextBox>

                                            <TextBlock 
                Text="Tél :"
                x:Name="_TextBlockAdrFacturationTel" 
                Grid.Row="5" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxAdresseFacturationTél" 
                Grid.Row="5" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAdresseFacturationTél_TextChanged"
                >
                                            </TextBox>

                                            <TextBlock 
                Text="Fax :"
                x:Name="_TextBlockAdrFacturationFax" 
                Grid.Row="6" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>

                                            <TextBox 
                x:Name="_TextBoxAdresseFacturationFax" 
                Grid.Row="6" 
                Grid.Column="2" 
                Margin="2" 
                Text="{Binding Path=Nom, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxAdresseFacturationFax_TextChanged"
                >
                                            </TextBox>
                                        </Grid.Children>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            
                            <Grid Row="1" Column="3">
                                <GroupBox x:Name="_GroupBoxAdresseLivraison" Header="Adresse de livraison">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto" MinWidth="100"></ColumnDefinition>
                                            <ColumnDefinition Width="5*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5*"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="5*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.Children>
                                            <TextBlock 
                Text="Nom :"
                x:Name="_TextBlockAdrLivraisonNom" 
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
                >
                                            </TextBlock>

                                            <!--<CheckBox
                Grid.Row="3"
                Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="right"
                                Margin="5"
                >
                                            </CheckBox>-->

                                            <ComboBox 
                x:Name="_TextBoxAdrLivraisonNom" 
                Grid.Row="1" 
                Grid.Column="2" 
                Margin="2" 
                SelectedItem="{Binding Path=Type}" 
                DisplayMemberPath="Libelle" 
                            >
                                                <ComboBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <VirtualizingStackPanel/>
                                                    </ItemsPanelTemplate>
                                                </ComboBox.ItemsPanel>
                                            </ComboBox>

                                            <TextBlock 
                Text="Adresse :"
                x:Name="_TextBlockAdrLivraisonAdresse" 
                Grid.Row="2" 
                Grid.Column="1" 
                Margin="2"
                VerticalAlignment="Center"
