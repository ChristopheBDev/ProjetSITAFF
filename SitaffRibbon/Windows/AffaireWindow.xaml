            Grid.Column="3"
            Grid.Row="0"
            Margin="2"
            Name="_DatePickerDateAcceptation" 
            SelectedDate="{Binding Path=Date_Acceptation, UpdateSourceTrigger=PropertyChanged}"
            SelectedDateFormat="Short"
            Text="Sélectionner une date"
            SelectedDateChanged="_DatePickerDateDebut_SelectedDateChanged" />

                    <TextBlock 
                x:Name="_TextBlockDate_Fin_Effective"
