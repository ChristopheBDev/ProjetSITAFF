<Window x:Class="SitaffRibbon.Windows.AffaireWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
        xmlns:local="clr-namespace:SitaffRibbon.Windows"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Affaire" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Icon="..\Images\icone-affaire-large.png" Loaded="Window_Loaded" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
        </Grid.RowDefinitions>
        <!--  Definition des colonnes  -->
        <Grid.Children>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="50*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="50*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.Children>
                    <TextBlock 
                x:Name="_TextBlockNumeroAffaire"
                Text="Numero d'affaire : "
                Grid.Row="0" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                    </TextBlock>

                    <TextBox 
                x:Name="_TextBoxNumeroAffaire" 
                Grid.Row="0" 
                Grid.Column="1" 
                TextAlignment="Right"
                Margin="2" 
                TextChanged="_TextBoxNumeroAffaire_TextChanged"
                Text="{Binding Path=Numero}" 
                >
                    </TextBox>

                    <TextBlock 
                x:Name="_TextBlockEntrepriseMere"
                Text="Entreprise Mère : "
                Grid.Row="1" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                    </TextBlock>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.Children>
                            <ComboBox 
                x:Name="_ComboBoxEntrepriseMere" 
                        Margin="2" 
                SelectedItem="{Binding Path=Entreprise_Mere1}" 
                DisplayMemberPath="Nom" 
                ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:AffaireWindow}}, Path=listEntreprise_Mere}"
                SelectionChanged="_ComboBoxEntrepriseMere_SelectionChanged"
                >
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>
                            <Button
                                        Grid.Column="1"
                                        x:Name="NewEntrepriseMere"
                                        Click="NewEntrepriseMere_Click"                                                                                
                                        >
                                <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                            </Button>
                            <Button
                                        Grid.Column="2"
                                        x:Name="LookEntrepriseMere"
                                        Click="LookEntrepriseMere_Click"
                                        >
                                <Image Source="..\Images\icone-voir-small.png" Height="20"></Image>
                            </Button>
                        </Grid.Children>
                    </Grid>

                    <TextBlock 
                x:Name="_TextBlockChargeAffaire"
                Text="Chargé d'Affaire : "
                Grid.Row="2" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                >
                    </TextBlock>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.Children>
                            <ComboBox x:Name="_ComboBoxChargeAffaire"
                              Margin="2" 
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Salarie}"
                             DisplayMemberPath="Personne.fullname"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:AffaireWindow}}, Path=Charge_Affaire}"
                  SelectionChanged="_ComboBoxChargeAffaire_SelectionChanged"
                    >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <Button
                                        Grid.Column="1"
                                        x:Name="NewChargeAffaire"
                                        Click="NewChargeAffaire_Click"                                                                                
                                        >
                                <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                            </Button>
                            <Button
                                        Grid.Column="2"
                                        x:Name="LookChargeAffaire"
                                        Click="LookChargeAffaire_Click"
                                        >
                                <Image Source="..\Images\icone-voir-small.png" Height="20"></Image>
                            </Button>
                        </Grid.Children>
                    </Grid>
                    <TextBlock 
                x:Name="_TextBlockDateAcceptation"
                Text="Date début de chantier : "
                Grid.Row="0" 
                Grid.Column="2" 
                VerticalAlignment="Center"
                >
                    </TextBlock>

