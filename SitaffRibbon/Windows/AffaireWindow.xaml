            <Grid Grid.Row="3" Grid.Column="1">
                <TabControl>
                    <TabItem x:Name="_tabVersions" Header="Versions">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="15"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="5"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="5"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <DataGrid
                                  x:Name="_dataGridVersions"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  ItemsSource="{Binding Path=Versions}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="None"
                                  
                                  >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Devis" 
                                                                            Binding="{Binding Path=Devis1.Numero, Mode=OneWay}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Numéro" 
                                                                            Binding="{Binding Path=Numero, Mode=OneWay}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Commentaires" 
                                                                            Binding="{Binding Path=Commentaire}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Montant négocié" 
                                                                            Binding="{Binding Path=Montant_Remise, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, StringFormat='{}{0:n}'}"
                                                                            IsReadOnly="True"
                                                            
                                                                                >
                                            <DataGridTextColumn.CellStyle>
                                                <Style>
                                                    <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Client" 
                                                                            Binding="{Binding Path=Devis1.Client2.Entreprise.Libelle}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Type de version" 
                                                                            Binding="{Binding Path=Version_Type1.Libelle}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Date de création" 
                                                                            Binding="{Binding Path=Date_Creation, StringFormat=\{0:dd/MM/yyyy\}}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Etat de la version" 
                                                                            Binding="{Binding Path=EtatDuDevisVersion}"
                                                                            IsReadOnly="True"
                                                                                />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Grid
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Button 
                        Content="Nouveau"
                        x:Name="_ButtonAffaireVersionsNouveau"
                        Grid.Row="1"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonAffaireVersionsNouveau_Click"
                                                        
                        >
                                    </Button>

                                    <Button 
                        Content="Modifier"
                        x:Name="_ButtonAffaireVersionsModifier"
                        Grid.Row="2"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonAffaireVersionsModifier_Click"
                                                        
                        >
                                    </Button>

                                    <Button 
                        Content="Supprimer"
                        x:Name="_ButtonAffaireVersionsSupprimer"
                        Grid.Row="5"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonAffaireVersionsSupprimer_Click"
                        >
                                    </Button>
                                </Grid>
                            </Grid.Children>
                        </Grid>
                    </TabItem>

                    <TabItem x:Name="_tabFactures" Header="Factures">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="15"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="5"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="5"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <DataGrid
                                  x:Name="_dataGridFacture"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  ItemsSource="{Binding Path=Facture}"
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="None"
                                  
                                  >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Numéro Facture" 
                                                                            Binding="{Binding Path=Numero, Mode=OneWay}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Numéro Affaire" 
                                                                            Binding="{Binding Path=Affaire1.Numero}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Numéro Commande" 
                                                                            Binding="{Binding Path=Commande1.Numero_Commande}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Date Facture" 
                                                                            Binding="{Binding Path=Date_Facture, StringFormat=\{0:dd/MM/yyyy\}}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Date Echéance" 
                                                                            Binding="{Binding Path=Date_Echeance, StringFormat=\{0:dd/MM/yyyy\}}"
                                                                            IsReadOnly="True"
                                                                                />
                                        <DataGridTextColumn Header="Montant H.T" 
                                                                            Binding="{Binding Path=Montant, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, StringFormat='{}{0:n}'}"
                                                                            IsReadOnly="True"
                                                                                >
                                            <DataGridTextColumn.CellStyle>
                                                <Style>
                                                    <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right"/>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Conditions de règlement" 
                                                                            Binding="{Binding Path=Condition_Reglement1.Libelle}"
                                                                            IsReadOnly="True"
                                                                                />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Grid
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Button 
                        Content="Nouveau"
                        x:Name="_ButtonAffaireFactureNouveau"
                        Grid.Row="1"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonAffaireFactureNouveau_Click"
                                                        
                        >
                                    </Button>

                                    <Button 
                        Content="Modifier"
                        x:Name="_ButtonAffaireFactureModifier"
                        Grid.Row="2"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonAffaireFactureModifier_Click"
                                                        
                        >
                                    </Button>

                                    <Button 
                        Content="Supprimer"
                        x:Name="_ButtonAffaireFactureSupprimer"
                        Grid.Row="5"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonAffaireFactureSupprimer_Click"
                        >
                                    </Button>
                                </Grid>
                            </Grid.Children>
                        </Grid>
                    </TabItem>

                    <TabItem x:Name="_tabCommandes" Header="Commandes">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="15"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
