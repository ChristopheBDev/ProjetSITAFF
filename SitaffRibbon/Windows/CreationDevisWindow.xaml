                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientFaxLivr"
                             Grid.Row="13" 
                             Grid.Column="8"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientPaysLivr"
                             Grid.Row="15" 
                             Grid.Column="8"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                    </Grid>

                                </TabItem>

                                <!-- ACTIVITES -->

                                <TabItem Header="Activités" x:Name="_tabItemActivites">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5"></ColumnDefinition>
                                            <ColumnDefinition Width="40*"></ColumnDefinition>
                                            <ColumnDefinition Width="5"></ColumnDefinition>
                                            <ColumnDefinition Width="10*" MinWidth="50"></ColumnDefinition>
                                            <ColumnDefinition Width="5"></ColumnDefinition>
                                            <ColumnDefinition Width="50*"></ColumnDefinition>
                                            <ColumnDefinition Width="5"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="0"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <ListBox 
                        x:Name="_ComboBoxActivite" 
                        Grid.Row="1" 
                        Grid.Column="1"
                        MinWidth="350"
                                            Width="350"
                                            MaxWidth="350"
                        Height="250"
                        MinHeight="250"
                        MaxHeight="400"
                        Margin="2" 
                        DisplayMemberPath="Libelle" 
                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=Secteur_Activite}"
                        >
                                        </ListBox>
                                        <DataGrid 
            x:Name="_ComboBoxActiviteOfDevis" 
            ItemsSource="{Binding Path=Devis_Activite}" 
            AutoGenerateColumns="False" 
            CanUserAddRows="False" 
            CanUserDeleteRows="false"
            FrozenColumnCount="2"
            Grid.Column="5"
            Grid.Row="1"
            EnableColumnVirtualization="True">

                                            <!--  Definition des colomnes du DataGrid  -->
                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                    Header="Activite" 
                    Binding="{Binding Path=Activite1.Libelle, Mode=OneWay}"                    
                    IsReadOnly="True" 
                    Width="45*" 
                    MinWidth="120"  
                    FontFamily="Comic Sans MS"
                    >
                                                </DataGridTextColumn>

                                                <DataGridTextColumn 
                    Header="Commentaire devis" 
                    Binding="{Binding Path=Commentaire, Mode=TwoWay}"                    
                    Width="55*" 
                    MinWidth="120"  
                    FontFamily="Comic Sans MS"
                    x:Name="ColonneActivites"
                    >
                                                </DataGridTextColumn>

                                            </DataGrid.Columns>
                                            <!--  Fin Definition des colomnes du DataGrid  -->
                                        </DataGrid>

                                        <Grid
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5"></ColumnDefinition>
                                                <ColumnDefinition Width="100*"></ColumnDefinition>
                                                <ColumnDefinition Width="5"></ColumnDefinition>
