                                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="_TextBlockCPAdresse" Text="Adresse : "></TextBlock>
                                        <TextBlock Grid.Row="7" Grid.Column="1" x:Name="_TextBlockCPVille" Text="Ville : "></TextBlock>
                                        <TextBlock Grid.Row="9" Grid.Column="1" x:Name="_TextBlockCPCodePostal" Text="ZIP/CP : "></TextBlock>
                                        <TextBlock Grid.Row="11" Grid.Column="1" x:Name="_TextBlockCPTelephone" Text="Téléphone : "></TextBlock>
                                        <TextBlock Grid.Row="13" Grid.Column="1" x:Name="_TextBlockCPFax" Text="Fax : "></TextBlock>
                                        <TextBlock Grid.Row="15" Grid.Column="1" x:Name="_TextBlockCPPays" Text="Pays : "></TextBlock>
                                        <Grid Grid.Row="3" Grid.Column="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.Children>
                                                <ComboBox x:Name="_ComboBoxCreationDevisNom"
                             Grid.Row="0" 
                             Grid.Column="0"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Client2}"
                             DisplayMemberPath="Entreprise.Libelle"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=listClient}"
                             SelectionChanged="_ComboBoxCreationDevisNom_SelectionChanged"
                                >

                                                    <ComboBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel/>
                                                        </ItemsPanelTemplate>
                                                    </ComboBox.ItemsPanel>
                                                </ComboBox>
                                                <Button
                                                    ToolTip="Ajouter"
                                        Grid.Column="1"
                                        x:Name="NewEntreprise"
                                        Click="NewEntreprise_Click"                                                                                
                                        >
                                                    <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                                                </Button>
                                                <Button
                                                    ToolTip="Voir"
                                        Grid.Column="2"
                                        x:Name="LookEntreprise"
                                        Click="LookEntreprise_Click"
                                        >
                                                    <Image Source="..\Images\icone-afficher-large.png" Height="20"></Image>
                                                </Button>
                                            </Grid.Children>
                                        </Grid>

                                        <TextBox x:Name="_TextBoxCreationDevisClientAdresse"
                             Grid.Row="5" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False"            
                                         >

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientVille"
                             Grid.Row="7" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientZIPCP"
                             Grid.Row="9"
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientTelephonne"
                             Grid.Row="11" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientFax"
                             Grid.Row="13" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientPays"
                             Grid.Row="15" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <!-- Client Facturation -->
                                        <TextBlock Grid.Row="1" Grid.Column="4" Text="CLIENT FACTURATION "></TextBlock>
                                        <TextBlock Grid.Row="3" Grid.Column="4" x:Name="_textBlockCFNom" Text="Nom : "></TextBlock>
                                        <TextBlock Grid.Row="5" Grid.Column="4" x:Name="_textBlockCFAdresse" Text="Adresse : "></TextBlock>
                                        <TextBlock Grid.Row="7" Grid.Column="4" x:Name="_textBlockCFVille" Text="Ville : "></TextBlock>
                                        <TextBlock Grid.Row="9" Grid.Column="4" x:Name="_textBlockCFCp" Text="ZIP/CP : "></TextBlock>
                                        <TextBlock Grid.Row="11" Grid.Column="4" x:Name="_textBlockCFTelephone" Text="Téléphonne : "></TextBlock>
                                        <TextBlock Grid.Row="13" Grid.Column="4" x:Name="_textBlockCFFax" Text="Fax : "></TextBlock>
                                        <TextBlock Grid.Row="15" Grid.Column="4" x:Name="_textBlockCFPays" Text="Pays : "></TextBlock>

                                        <ComboBox x:Name="_ComboBoxCreationDevisNomFact"
                             Grid.Row="3" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Client}"
                             DisplayMemberPath="Entreprise.Libelle"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=listClient}"
                             SelectionChanged="_ComboBoxCreationDevisNomFact_SelectionChanged"
   
                                          >

                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientAdresseFact"
                             Grid.Row="5" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientVilleFact"
                             Grid.Row="7" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientZIPCPFact"
                             Grid.Row="9" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientTelephonneFact"
                             Grid.Row="11" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientFaxFact"
                             Grid.Row="13" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientPaysFact"
                             Grid.Row="15" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>
                                        <!-- Client Livraison -->
                                        <TextBlock Grid.Row="1" Grid.Column="7" Text="CLIENT LIVRAISON "></TextBlock>
                                        <TextBlock Grid.Row="3" Grid.Column="7" x:Name="_textBlockCLNom" Text="Nom : "></TextBlock>
                                        <TextBlock Grid.Row="5" Grid.Column="7" x:Name="_textBlockCLAdresse" Text="Adresse : "></TextBlock>
                                        <TextBlock Grid.Row="7" Grid.Column="7" x:Name="_textBlockCLVille" Text="Ville : "></TextBlock>
                                        <TextBlock Grid.Row="9" Grid.Column="7" x:Name="_textBlockCLCp" Text="ZIP/CP : "></TextBlock>
                                        <TextBlock Grid.Row="11" Grid.Column="7" x:Name="_textBlockCLTéléphone" Text="Téléphone : "></TextBlock>
                                        <TextBlock Grid.Row="13" Grid.Column="7" x:Name="_textBlockCLFax" Text="Fax : "></TextBlock>
                                        <TextBlock Grid.Row="15" Grid.Column="7" x:Name="_textBlockCLPays" Text="Pays : "></TextBlock>


                                        <ComboBox x:Name="_ComboBoxCreationDevisNomLivr"
                             Grid.Row="3" 
                             Grid.Column="8"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Client1}"
                             DisplayMemberPath="Entreprise.Libelle"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=listClient}"
                             SelectionChanged="_ComboBoxCreationDevisNomLivr_SelectionChanged"   
                                          >

                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientAdresseLivr"
                             Grid.Row="5" 
                             Grid.Column="8"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientVilleLivr"
                             Grid.Row="7" 
                             Grid.Column="8"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientZIPCPLivr"
                             Grid.Row="9" 
                             Grid.Column="8"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             IsEnabled="False">

                                        </TextBox>

                                        <TextBox x:Name="_TextBoxCreationDevisClientTelephonneLivr"
                             Grid.Row="11" 
                             Grid.Column="8"
                             Margin="2"
