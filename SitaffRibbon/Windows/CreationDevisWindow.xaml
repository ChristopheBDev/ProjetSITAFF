                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=Etat_Devis}"
                             SelectionChanged="_ComboBoxCreationDevisEtatDevis_SelectionChanged"
                              >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <TextBox x:Name="_TextBoxCreationDevisCommentaire_Devis_Etat"
                             Grid.Row="5" 
                             Grid.Column="5"
                             Margin="2"
