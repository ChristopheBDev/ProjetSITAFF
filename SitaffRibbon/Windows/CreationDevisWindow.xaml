                        x:Name="_ButtonVersDroite"
                        Grid.Row="1"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonVersDroite_click"
                        >
                                            </Button>

                                            <Button 
                        Content="◄-"
                        x:Name="_ButtonVersGauche"
                        Grid.Row="3"                    
                        Grid.Column="1"  
                        Margin="10" 
                        Height="40"
                        Click="_ButtonVersGauche_click"
                        >
                                            </Button>

                                        </Grid>

                                    </Grid>

                                </TabItem>

