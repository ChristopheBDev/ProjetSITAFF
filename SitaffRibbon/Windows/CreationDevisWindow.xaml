                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Devis_Type1}"
                             DisplayMemberPath="Libelle"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=Type_Devis}"
                             SelectionChanged="_ComboBoxCreationDevisTypeDevis_SelectionChanged"
                              >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                        </Grid.Children>
                    </Grid>
                    <Grid Grid.Column="1" Grid.Row="3">
                        <Grid.ColumnDefinitions>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>

                        </Grid.RowDefinitions>
                        <Grid.Children>
                            <TabControl Grid.Row="0" Grid.Column="0">
                                <!-- CLIENT -->
                                <TabItem Header="Client" x:Name="_tabItemClient">
