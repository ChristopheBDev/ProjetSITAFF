<Window x:Class="SitaffRibbon.Windows.CreationDevisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SitaffRibbon.Windows"
        Icon="..\Images\icone-devis-large.png"
        Title="Devis" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" MinWidth="500" MinHeight="500" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Children>


            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="0"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="0"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="0"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="0"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Children>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="15"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="50*"></ColumnDefinition>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"></RowDefinition>
                            <RowDefinition Height="0"></RowDefinition>
                            <RowDefinition Height="0"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="0"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="0"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="5"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.Children>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="_TextBlockNumeroDevis" Text="Numéro devis : " Visibility="Hidden"></TextBlock>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="_TextBlockTitreDevis" Text="Titre du devis : "></TextBlock>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="_TextBlockCAPrincipal" Text="CA principal : "></TextBlock>
                            <TextBlock Grid.Row="8" Grid.Column="4" x:Name="_TextBlockCASecondaire" Text="CA secondaire : "></TextBlock>
                            <TextBlock Grid.Row="7" Grid.Column="1" x:Name="_TextBlockChargeEtude" Text="Chargé d'étude : "></TextBlock>
                            <TextBlock Grid.Row="8" Grid.Column="1" x:Name="_TextBlockTVA" Text="TVA : "></TextBlock>

                            <TextBox x:Name="_TextBoxCreationDevisNumeroDevis"
                             Grid.Row="1" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             Text="{Binding Path=Devis.Numero, UpdateSourceTrigger=PropertyChanged}"
                             LostFocus="_TextBoxCreationDevisNumeroDevis_LostFocus"
                             IsEnabled="False"
                             Visibility="Hidden">

                            </TextBox>

                            <TextBox x:Name="_TextBoxCreationDevisTitreDevis"
                             Grid.Row="3" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             Text="{Binding Path=Libelle, UpdateSourceTrigger=PropertyChanged}"
                             LostFocus="_TextBoxCreationDevisTitreDevis_LostFocus">

                            </TextBox>

                            <ComboBox x:Name="_ComboBoxCreationDevisCASecondaire"
                             Grid.Row="8" 
                             Grid.Column="5"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Salarie1}"
                             DisplayMemberPath="Personne.fullname"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=Charge_Affaire}"
                             SelectionChanged="_ComboBoxCreationDevisCASecondaire_SelectionChanged"
                              >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <ComboBox x:Name="_ComboBoxCreationDevisCAPrincipal"
                             Grid.Row="5" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Salarie}"
                             DisplayMemberPath="Personne.fullname"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=Charge_Affaire}"
                             SelectionChanged="_ComboBoxCreationDevisCAPrincipal_SelectionChanged"
                    >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <ComboBox x:Name="_ComboBoxCreationDevisChargeEtude"
                             Grid.Row="7" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Salarie2}"
                             DisplayMemberPath="Personne.fullname"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=Charge_Affaire}"
                             SelectionChanged="_ComboBoxCreationDevisChargeEtude_SelectionChanged"
                    >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <ComboBox x:Name="_ComboBoxCreationDevisTVA"
                             Grid.Row="8" 
                             Grid.Column="2"
                             Margin="2"
                             Width="Auto"
                             MinWidth="100"
                             SelectedItem="{Binding Path=Tva1}"
                             DisplayMemberPath="Taux"
                             ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CreationDevisWindow}}, Path=lesTVA}"
                             SelectionChanged="_ComboBoxCreationDevisTVA_SelectionChanged"
                    >

                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>

                            <TextBlock Grid.Row="3" Grid.Column="4" x:Name="_TextBlockEtatDevis" Text="Etat du devis : "></TextBlock>
                            <TextBlock Grid.Row="5" Grid.Column="4" x:Name="_TextBlockCommentaireDEvis" Text="Commentaire etat du devis : "></TextBlock>
                            <TextBlock Grid.Row="7" Grid.Column="4" x:Name="_TextBlocktypeDevis" Text="Type du devis : "></TextBlock>

                            <ComboBox x:Name="_ComboBoxCreationDevisEtatDevis"
