<Window x:Class="SitaffRibbon.Windows.FactureFournisseurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
        xmlns:local2="clr-namespace:SitaffRibbon.Converters"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SitaffRibbon.Windows"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit" 
        Icon="..\Images\icone-facture-large.png"
        Title="Facture fournisseur" Height="Auto" Width="Auto" MaxWidth="1200" MaxHeight="1100" SizeToContent="WidthAndHeight" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" MinWidth="500" MinHeight="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" MinWidth="5"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="5" MinWidth="5"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" MinHeight="5"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="5" MinHeight="5"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Children>
            <Grid Grid.Row="1" Grid.Column="1" x:Name="_firstLineToHideTop">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="50*" MinWidth="150"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="50*" MinWidth="150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="5"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.Children>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        x:Name="_textBlockNumeroFacture"
                        Text="Numéro Facture : ">
                    </TextBlock>
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        x:Name="_textBoxNumeroFacture"
                        TextChanged="_textBoxNumeroFacture_TextChanged"
                        Text="{Binding Path=Numero}">
                    </TextBox>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        x:Name="_textBlockDateFacture"
                        Text="Date Facture : ">
                    </TextBlock>
                    <DatePicker 
            Grid.Column="3"
            Grid.Row="0"
            x:Name="_DatePickerDateFacture"
            SelectedDateChanged="_DatePickerDateFacture_SelectedDateChanged"
            SelectedDateFormat="Short"
            SelectedDate="{Binding Path=Date_Facture, UpdateSourceTrigger=PropertyChanged}"
             />

                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.Children>
                            <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="23"
                        HorizontalAlignment="Right"
                        x:Name="_textBlockNumeroPieceComptable"
                        Text="Numéro pièce comptable : ">
                            </TextBlock>

                            <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        x:Name="_textBlockFournisseur"
                        Text="Fournisseur : ">
                            </TextBlock>
                        </Grid.Children>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.Children>
                            <TextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Top"
                        Height="23"
                        x:Name="_textBoxNumeroPieceComptable"
                        TextChanged="_textBoxNumeroPieceComptable_TextChanged"
                        Text="{Binding Path=Numero_Piece_Comptable}">
                            </TextBox>
                            <ComboBox 
                                            Grid.Row="1" 
                                            Grid.Column="0"
                                            x:Name="_comboBoxFournisseur" 
                                            SelectionChanged="_comboBoxFournisseur_SelectionChanged"
                                            SelectedItem="{Binding Path=Fournisseur1}"
                                            ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:FactureFournisseurWindow}}, Path=listFournisseur}"
                                            DisplayMemberPath="Entreprise.NomEntrepriseAvecVille">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                        </Grid.Children>
                    </Grid>

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        x:Name="_textBlockCommentaires"
                        Text="Commentaires : ">
                    </TextBlock>

                    <TextBox 
                x:Name="_TextBoxCommentaires" 
                Grid.Row="2" 
                Grid.Column="3" 
                TextWrapping="Wrap"
                AcceptsReturn="True"
                MinHeight="30"       
                MaxHeight="100"
                Text="{Binding Path=Commentaire, UpdateSourceTrigger=PropertyChanged}"
                ></TextBox>
                </Grid.Children>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1" x:Name="_secondLineToHideTop">
                <TabControl x:Name="_tabControlSelections">
                    <TabItem Header="Selection BL">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto" MinHeight="150" MaxHeight="240"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="100*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <TextBlock
                                            x:Name="_filterAffaire"
                                            Text="Affaire : "
                                            Grid.Row="0"
                                            Grid.Column="0">
                                        </TextBlock>
                                        <ComboBox 
                                            Grid.Row="0" 
                                            Grid.Column="1"
                                            x:Name="_comboBoxFilterAffaire" 
                                            SelectionChanged="_comboBoxFilterAffaire_SelectionChanged"
                                            ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:FactureFournisseurWindow}}, Path=listAffaire}"
                                            DisplayMemberPath="Numero">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>
                                        <Button x:Name="_mettreANullAffaire" Grid.Row="0" Grid.Column="2" ToolTip="Mettre à null" Click="_mettreANullAffaire_Click">
                                            <Image Source="..\Images\icone-null-small.png" Height="20"></Image>
                                        </Button>
                                        <Button
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        x:Name="LookAffaire"
                                        Click="LookAffaire_Click_1"
                                        ToolTip="Voir"
                                        >
                                            <Image Source="..\Images\icone-afficher-large.png" Height="20"></Image>
                                        </Button>
                                        <TextBlock
                                            x:Name="_filterCommandeBL"
                                            Text="Commande : "
                                            Grid.Row="1"
                                            Grid.Column="0">
                                        </TextBlock>
                                        <ComboBox 
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            x:Name="_comboBoxFilterCommandeBL" 
                                            SelectionChanged="_comboBoxFilterCommandeBL_SelectionChanged" 
                                            DisplayMemberPath="ConcatFactureFournisseur">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>
                                        <Button x:Name="_mettreANullCommande" Grid.Row="1" Grid.Column="2" ToolTip="Mettre à null" Click="_mettreANullCommande_Click">
                                            <Image Source="..\Images\icone-null-small.png" Height="20"></Image>
                                        </Button>
                                        <Button
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        x:Name="LookCommande"
                                        Click="LookCommande_Click_1"
                                        ToolTip="Voir"
                                        >
                                            <Image Source="..\Images\icone-afficher-large.png" Height="20"></Image>
                                        </Button>
                                    </Grid.Children>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <!--Définitions des colonnes du corps de la fenêtre-->
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid.Children>
                                        <!--DataGrid de gauche-->
                                        <Grid Grid.Row="0" Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100*"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.Children>
                                                <DataGrid 
                        x:Name="_dataGridBLGauche"
                        Grid.Column="0"
                        Grid.Row="0"
                        AutoGenerateColumns="False"
                        FrozenColumnCount="2"
                        CanUserAddRows="False"
                        MinHeight="150"
                        MaxHeight="150"
                        CanUserDeleteRows="False">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn 
                                Width="28*" 
                                Header="Numéro BL" 
                                Binding="{Binding Path=bon_livraison.Numero}"
                                IsReadOnly="True">
                                                        </DataGridTextColumn>
                                                        <DataGridTextColumn 
                                Width="28*" 
                                Header="Affaire" 
                                Binding="{Binding Path=affaire.Numero}"
                                IsReadOnly="True">
                                                        </DataGridTextColumn>
                                                        <DataGridTextColumn 
                                Width="28*" 
                                Header="Commande" 
                                Binding="{Binding Path=commande_fournisseur.Numero}"
                                IsReadOnly="True">
                                                        </DataGridTextColumn>
                                                        <DataGridTextColumn 
                                Width="16*" 
                                Header="Montant BL" 
                                Binding="{Binding Path=bon_livraison.Montant}"
                                IsReadOnly="True">
                                                        </DataGridTextColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                                <Button x:Name="_newRegie" Grid.Row="1" Grid.Column="0" ToolTip="Ajouter" Click="Button_Click_1">
                                                    <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                                                </Button>
                                            </Grid.Children>
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <!--Définitions des lignes de la colonne du mileu du corps-->
                                                <RowDefinition Height="33*"></RowDefinition>
                                                <RowDefinition Height="40"></RowDefinition>
                                                <RowDefinition Height="33*"></RowDefinition>
                                                <RowDefinition Height="40"></RowDefinition>
                                                <RowDefinition Height="33*"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid.Children>
                                                <!--Outils de la colonne du milieu du corps-->
                                                <Button 
                                Grid.Row="1" 
                                MinWidth="50"
                                Content="->" 
                                x:Name="_buttonGaucheDroiteBL"
                                Click="_buttonGaucheDroiteBL_Click">
                                                </Button>
                                                <Button 
                                Grid.Row="3" 
                                Content="&lt;-" 
                                MinWidth="50"
                                x:Name="_buttonDroiteGaucheBL"
                                Click="_buttonDroiteGaucheBL_Click">
                                                </Button>
                                            </Grid.Children>
                                        </Grid>

                                        <!--DataGrid de droite-->
                                        <DataGrid 
                        Grid.Column="2" 
                        x:Name="_dataGridDroitBL"
                        ItemsSource="{Binding Path=Bon_Livraison}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        MinHeight="150"
                        MaxHeight="150"
                        CanUserDeleteRows="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                                Width="100*" 
                                Header="Numéro BL"
                                Binding="{Binding Path=Numero}"
                                IsReadOnly="True">
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid.Children>
                                </Grid>
                            </Grid.Children>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Selection Contenus de Commandes">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto" MinHeight="150" MaxHeight="240"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="100*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <TextBlock
                                            x:Name="_filterCommande"
                                            Text="Commande : "
                                            Grid.Row="0"
                                            Grid.Column="0">
                                        </TextBlock>
                                        <ComboBox 
                                            Grid.Row="0" 
                                            Grid.Column="1"
                                            x:Name="_comboBoxFilterCommande" 
                                            SelectionChanged="_comboBoxFilterCommande_SelectionChanged" 
                                            DisplayMemberPath="ConcatFactureFournisseur">
                                            <ComboBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel/>
                                                </ItemsPanelTemplate>
                                            </ComboBox.ItemsPanel>
                                        </ComboBox>
                                        <Button
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        x:Name="LookCommande1"
                                        Click="LookCommande1_Click_1"
                                        ToolTip="Voir"
                                        >
                                            <Image Source="..\Images\icone-afficher-large.png" Height="20"></Image>
                                        </Button>
                                    </Grid.Children>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <!--Définitions des colonnes du corps de la fenêtre-->
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid.Children>
                                        <!--DataGrid de gauche-->
                                        <DataGrid 
                        x:Name="_dataGridCommandeGauche"
                        Grid.Column="0"
                        Grid.Row="0"
                        AutoGenerateColumns="False"
                        FrozenColumnCount="2"
                        CanUserAddRows="False"
                        MinHeight="150"
                        MaxHeight="150"
                        CanUserDeleteRows="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                                Width="75*" 
                                Header="Description" 
                                Binding="{Binding Path=Designation}"
                                IsReadOnly="True">
                                                </DataGridTextColumn>
                                                <DataGridTextColumn 
                                Width="25*" 
                                Header="Quantité Restante" 
                                Binding="{Binding Path=QuantiteRestante}"
                                IsReadOnly="True">
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <!--Définitions des lignes de la colonne du mileu du corps-->
                                                <RowDefinition Height="33*"></RowDefinition>
                                                <RowDefinition Height="40"></RowDefinition>
                                                <RowDefinition Height="33*"></RowDefinition>
                                                <RowDefinition Height="40"></RowDefinition>
                                                <RowDefinition Height="33*"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid.Children>
                                                <!--Outils de la colonne du milieu du corps-->
                                                <Button 
                                Grid.Row="1" 
                                Content="->" 
                                MinWidth="50"
                                x:Name="_buttonGaucheDroiteCommande"
                                Click="_buttonGaucheDroiteCommande_Click">
                                                </Button>
                                                <Button 
                                Grid.Row="3" 
                                Content="&lt;-" 
                                MinWidth="50"
                                x:Name="_buttonDroiteGaucheCommande"
                                Click="_buttonDroiteGaucheCommande_Click">
                                                </Button>
                                            </Grid.Children>
                                        </Grid>

                                        <!--DataGrid de droite-->
                                        <DataGrid 
                        Grid.Column="2" 
                        x:Name="_dataGridDroitCommande" 
                        ItemsSource="{Binding Path=Facture_Fournisseur_Contenu_Commande_Fournisseur}"
                        AutoGenerateColumns="False"
                        FrozenColumnCount="1"
                        CanUserAddRows="False"
                        MinHeight="150"
                        MaxHeight="150"
                        CanUserDeleteRows="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                                Width="75*" 
                                Header="Description"
                                Binding="{Binding Path=Contenu_Commande_Fournisseur1.Designation}"
                                IsReadOnly="True">
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid.Children>
                                </Grid>
                            </Grid.Children>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Accomptes">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="150" MaxHeight="240"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <!--Définitions des colonnes du corps de la fenêtre-->
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                        <ColumnDefinition Width="50*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid.Children>
                                        <!--DataGrid de gauche-->
                                        <DataGrid 
                        x:Name="_dataGridProformaGauche"
                        Grid.Column="0"
                        Grid.Row="0"
                        AutoGenerateColumns="False"
                        FrozenColumnCount="2"
                        CanUserAddRows="False"
                        MinHeight="150"
                        MaxHeight="150"
                        CanUserDeleteRows="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                    Header="Numéro" 
                    Binding="{Binding Path=Numero}"                    
                    IsReadOnly="True" 
                    Width="6*" 
                    FontFamily="Comic Sans MS"
                    >
                                                </DataGridTextColumn>

                                                <DataGridTextColumn 
                    Header="Montant" 
                    Binding="{Binding Path=Montant, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, StringFormat='{}{0:n}'}"
                    IsReadOnly="True" 
                    Width="10*" 
                    FontFamily="Comic Sans MS"
                    >
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <!--Définitions des lignes de la colonne du mileu du corps-->
                                                <RowDefinition Height="33*"></RowDefinition>
                                                <RowDefinition Height="40"></RowDefinition>
                                                <RowDefinition Height="33*"></RowDefinition>
                                                <RowDefinition Height="40"></RowDefinition>
                                                <RowDefinition Height="33*"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid.Children>
                                                <!--Outils de la colonne du milieu du corps-->
                                                <Button 
                                Grid.Row="1" 
                                Content="->" 
                                MinWidth="50"
                                x:Name="_buttonGaucheDroiteProforma"
                                Click="_buttonGaucheDroiteProforma_Click_1">
                                                </Button>
                                                <Button 
                                Grid.Row="3" 
                                Content="&lt;-" 
                                MinWidth="50"
                                x:Name="_buttonDroiteGaucheProforma"
                                Click="_buttonDroiteGaucheProforma_Click_1">
                                                </Button>
                                            </Grid.Children>
                                        </Grid>

                                        <!--DataGrid de droite-->
                                        <DataGrid 
                        Grid.Column="2" 
                        x:Name="_dataGridDroitProforma" 
                        ItemsSource="{Binding Path=Facture_Proforma}"
                        AutoGenerateColumns="False"
                        FrozenColumnCount="1"
                        CanUserAddRows="False"
                        MinHeight="150"
                        MaxHeight="150"
                        CanUserDeleteRows="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                    Header="Numéro" 
                    Binding="{Binding Path=Numero}"                    
                    IsReadOnly="True" 
                    Width="6*" 
                    FontFamily="Comic Sans MS"
                    >
                                                </DataGridTextColumn>

                                                <DataGridTextColumn 
                    Header="Montant" 
                    Binding="{Binding Path=Montant, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, StringFormat='{}{0:n}'}"
                    IsReadOnly="True" 
                    Width="10*" 
                    FontFamily="Comic Sans MS"
                    >
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid.Children>
                                </Grid>
                            </Grid.Children>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Children>
                    <Button
                        x:Name="_buttonMasquerHaut"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Masquer le haut"
                        Click="_buttonMasquerHaut_Click">
                    </Button>
                </Grid.Children>
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1">
                <TabControl>
                    <TabItem x:Name="_tabItemContenu" Header="Contenu">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.Children>
                                <Grid Column="0"  Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="100*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.Children>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="100*"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.Children>
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Text="Filtre Plan comptable entreprise mère : ">
                                                </TextBlock>
                                                <ComboBox
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    x:Name="_comboBoxFilterEntrepriseMere"                                                     
                                                    SelectionChanged="_comboBoxFilterEntrepriseMere_SelectionChanged_1"
                                                    DisplayMemberPath="Nom">                                                    
                                                </ComboBox>
                                                <Button x:Name="_mettreANullPlanComptable" Grid.Row="1" Grid.Column="2" ToolTip="Mettre à null" Click="_mettreANullPlanComptable_Click_1">
                                                    <Image Source="..\Images\icone-null-small.png" Height="20"></Image>
                                                </Button>
                                            </Grid.Children>
                                        </Grid>
                                        <DataGrid 
            x:Name="_DataGridContenu"                     
            MinWidth="750"
            MinHeight="150"
            ItemsSource="{Binding Path=Facture_Fournisseur_Contenu}"
            AutoGenerateColumns="False"
            CanUserDeleteRows="False"
            Grid.Column="0"
            Grid.Row="1"                   
            KeyUp="_dataGrid_KeyUp"
            >

                                            <DataGrid.Columns>
                                                <DataGridTextColumn 
                    Header="Réf fournisseur" 
                    Binding="{Binding Path=Reference_Fournisseur, Mode=TwoWay}"                    
                    Width="Auto"                     
                    FontFamily="Comic Sans MS"       
                    >
                                                </DataGridTextColumn>

                                                <DataGridTextColumn 
                    Header="Désignation" 
                    Binding="{Binding Path=Designation, Mode=TwoWay}"                    
                    Width="Auto"
                    FontFamily="Comic Sans MS"
                    >
                                                </DataGridTextColumn>

                                                <DataGridTextColumn 
                    Header="Qté commandée" 
                    Binding="{Binding Path=Qte_Commandee, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, StringFormat='{}{0:n}'}"                    
                    Width="Auto" 
                    FontFamily="Comic Sans MS"
                    IsReadOnly="True"                    
                    >
                                                    <DataGridTextColumn.CellStyle>
                                                        <Style>
                                                            <Setter Property="Grid.Background" Value="#79696969"></Setter>
                                                            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
                                                            <Setter Property="TextBlock.HorizontalAlignment" Value="Stretch"/>
                                                        </Style>
                                                    </DataGridTextColumn.CellStyle>
                                                </DataGridTextColumn>

                                                <DataGridTextColumn 
