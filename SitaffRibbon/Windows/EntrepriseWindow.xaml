<Window x:Class="SitaffRibbon.Windows.EntrepriseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SitaffRibbon.Windows"
        xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
        Icon="..\Images\icone-entreprise-large.png"
        Loaded="Window_Loaded"
        Width="Auto"
        MinWidth="600"
        Height="Auto"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="Entreprise">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="15"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
        </Grid.RowDefinitions>
        <!--  Definition des colonnes  -->
        <Grid.Children>
            <TabControl Grid.Row="1" Grid.Column="1">
                <TabItem Header="Général" x:Name="_tabItemGeneral">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.Children>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="5"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="5"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.Children>
                                    <!--Première ligne-->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50*"></ColumnDefinition>
                                            <ColumnDefinition Width="50*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.Children>
                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="16*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition Width="100*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.Children>
                                                    <TextBlock 
                                                        x:Name="_TextBlockCoordonneesGroupe" 
                                                        Text="Groupe : " 
                                                        Grid.Row="0" 
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>

                                                    <Grid Grid.Row="0" Grid.Column="2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.Children>
                                                            <ComboBox 
                                                        x:Name="_ComboBoxCoordonneesGroupe" 
                                                        Grid.Row="0" 
                                                        Grid.Column="0"
                                                        SelectedItem="{Binding Path=Groupe1}" 
                                                        DisplayMemberPath="Libelle" 
                                                        ToolTip="{Binding Path=Groupe1.Commentaire}"
                                                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=GroupList}" SelectionChanged="_ComboBoxCoordonneesGroupe_SelectionChanged">
                                                                <ComboBox.Resources>
                                                                    <Style TargetType="ComboBoxItem">
                                                                        <Setter Property="ToolTip" Value="{Binding Path=Commentaire}" />
                                                                    </Style>
                                                                </ComboBox.Resources>
                                                                <ComboBox.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <VirtualizingStackPanel/>
                                                                    </ItemsPanelTemplate>
                                                                </ComboBox.ItemsPanel>
                                                            </ComboBox>
                                                            <Button
                                        Grid.Column="1"
                                        x:Name="NewGroupe"
                                        Click="NewGroupe_Click_1"    
                                        ToolTip="Ajouter"
                                        >
                                                                <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                                                            </Button>
                                                            <Button
                                        Grid.Column="2"
                                        x:Name="LookGroupe"
                                        Click="LookGroupe_Click_1"
                                        ToolTip="Voir"
                                        >
                                                                <Image Source="..\Images\icone-afficher-large.png" Height="20"></Image>
                                                            </Button>
                                                            <Button
                                        Grid.Column="3"
                                        x:Name="NullGroupe"
                                        Click="NullGroupe_Click_1"   
                                        ToolTip="Mettre à null"
                                        >
                                                                <Image Source="..\Images\icone-null-small.png" Height="20"></Image>
                                                            </Button>
                                                        </Grid.Children>
                                                    </Grid>

                                                    <TextBlock 
                                                        x:Name="_TextBlockCoordonneesStatut"
                                                        Text="Statut : "
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>
                                                    <ComboBox 
                                                        x:Name="_ComboBoxCoordonneesStatut"
                                                        Grid.Row="2" 
                                                        Grid.Column="1"
                                                        SelectedItem="{Binding Path=Statut1}" 
                                                        DisplayMemberPath="Libelle" 
                                                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=listStatut}"
                                                        SelectionChanged="_ComboBoxCoordonneesStatut_SelectionChanged"
                                                        >
                                                        <ComboBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <VirtualizingStackPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ComboBox.ItemsPanel>
                                                    </ComboBox>

                                                    <TextBlock 
                                                        x:Name="_TextBlockCoordonneesTypeEntreprise"
                                                        Text="Type d'entreprise : "
                                                        Grid.Row="4"
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>
                                                    <ComboBox 
                                                        x:Name="_ComboBoxCoordonneesTypeEntreprise"
                                                        Grid.Row="4" 
                                                        Grid.Column="1"
                                                        SelectedItem="{Binding Path=Type_Entreprise1}" 
                                                        DisplayMemberPath="Libelle" 
                                                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=TypeList}"
                                                        SelectionChanged="_ComboBoxCoordonneesTypeEntreprise_SelectionChanged_1"
                                                        >
                                                        <ComboBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <VirtualizingStackPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ComboBox.ItemsPanel>
                                                    </ComboBox>

                                                    <TextBlock
                                                        Text="Nom : "
                                                        x:Name="_TextBlockCoordonnéesNom" 
                                                        Grid.Row="6" 
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>
                                                    <TextBox 
                                                        x:Name="_TextBoxCoordonnéesNom" 
                                                        Grid.Row="6" 
                                                        Grid.Column="1"
                                                        Text="{Binding Path=Libelle, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxCoordonnéesNom_TextChanged" LostFocus="_TextBoxCoordonnéesNom_LostFocus_1">
                                                    </TextBox>

                                                    <TextBlock 
                                                        Text="N° SIRET : "
                                                        x:Name="_TextBlockCoordonnéesSIRET" 
                                                        Grid.Row="8" 
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>
                                                    <TextBox 
                                                        x:Name="_TextBoxCoordonnéesSIRET" 
                                                        Grid.Row="8" 
                                                        Grid.Column="1"
                                                        Text="{Binding Path=Siret, UpdateSourceTrigger=PropertyChanged}" 
                                                        TextChanged="_TextBoxCoordonnéesSIRET_TextChanged" 
                                                        >
                                                    </TextBox>

                                                    <TextBlock 
                                                        Text="Site Web : "
                                                        x:Name="_TextBlockCoordonnéesSiteWeb" 
                                                        Grid.Row="10" 
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>
                                                    <TextBox 
                                                        x:Name="_TextBoxCoordonnéesSiteWeb" 
                                                        Grid.Row="10" 
                                                        Grid.Column="1"
                                                        Text="{Binding Path=Site_Web, UpdateSourceTrigger=PropertyChanged}" 
                                                        TextChanged="_TextBoxCoordonnéesSiteWeb_TextChanged"
                                                    >
                                                    </TextBox>

                                                    <TextBlock 
                                                        Text="N° APE : "
                                                        x:Name="_TextBlockCoordonnéesAPE" 
                                                        Grid.Row="12" 
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>
                                                    <TextBox 
                                                        x:Name="_TextBoxCoordonnéesAPE" 
                                                        Grid.Row="12" 
                                                        Grid.Column="1" 
                                                        Text="{Binding Path=APE, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxCoordonnéesAPE_TextChanged"
                                                    >
                                                    </TextBox>

                                                    <TextBlock
                                                        Text="Commentaires : "
                                                        x:Name="_TextBlockCommentaires" 
                                                        Grid.Row="14" 
                                                        Grid.Column="0"
                                                        >
                                                    </TextBlock>

                                                    <TextBox
                                                        x:Name="_TextBoxCommentaires" 
                                                        Grid.Row="14" 
                                                        Grid.Column="1"
                                                        TextWrapping="Wrap"
                                                        AcceptsReturn="True"
                                                        Text="{Binding Path=Commentaire, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxCommentaires_TextChanged"
                                                        >
                                                    </TextBox>
                                                </Grid.Children>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="5"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.Children>
                                                    <GroupBox Header="Adresse" Grid.Row="0" Grid.Column="0" x:Name="_groupBoxAdresse">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                <ColumnDefinition Width="100*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.Children>
                                                                <TextBlock 
                                                                    Text="Adresse : "
                                                                    x:Name="_TextBlockCoordonnéesAdresse" 
                                                                    Grid.Row="0" 
                                                                    Grid.Column="0"  
                                                                    >
                                                                </TextBlock>
                                                                <TextBox 
                                                                    x:Name="_TextBoxCoordonnéesAdresse" 
                                                                    Grid.Row="0" 
                                                                    Grid.Column="1"
                                                                    Text="{Binding Path=Adresse1.Rue, UpdateSourceTrigger=PropertyChanged}" 
                                                                    TextChanged="_TextBoxCoordonnéesAdresse_TextChanged"
                                                                    >
                                                                </TextBox>

                                                                <TextBlock 
                                                                    Text="Adresse Complémentaire : "
                                                                    x:Name="_TextBlockCoordonnéesBP" 
                                                                    Grid.Row="2" 
                                                                    Grid.Column="0"  
                                                                    >
                                                                </TextBlock>
                                                                <TextBox 
                                                                    x:Name="_TextBoxCoordonnéesBP" 
                                                                    Grid.Row="2" 
                                                                    Grid.Column="1" 
                                                                    Text="{Binding Path=Adresse1.Complement_Adresse, UpdateSourceTrigger=PropertyChanged}" 
                                                                    TextChanged="_TextBoxCoordonnéesBP_TextChanged"
                                                                    >
                                                                </TextBox>

                                                                <TextBlock 
                                                                    Text="Code Postal : "
                                                                    x:Name="_TextBlockCoordonnéesCP" 
                                                                    Grid.Row="4" 
                                                                    Grid.Column="0"
                                                                    >
                                                                </TextBlock>
                                                                <TextBox 
                                                                    x:Name="_TextBoxCoordonnéesCP" 
                                                                    Grid.Row="4" 
                                                                    Grid.Column="1"
                                                                    TextChanged="_TextBoxCoordonnéesCP_TextChanged"
                                                                >
                                                                </TextBox>

                                                                <TextBlock 
                                                                    Text="Ville : "
                                                                    x:Name="_TextBlockCoordonneesVille" 
                                                                    Grid.Row="6" 
                                                                    Grid.Column="0"
                                                                    >
                                                                </TextBlock>
                                                                <ComboBox 
                                                                    x:Name="_ComboBoxCoordonneesVille" 
                                                                    Grid.Row="6" 
                                                                    Grid.Column="1" 
                                                                    SelectedItem="{Binding Path=Adresse1.Ville1}" 
                                                                    DisplayMemberPath="fullVille" 
                                                                    ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=VilleList}"
                                                                    SelectionChanged="_ComboBoxCoordonneesVille_SelectionChanged" 
                                                                    GotFocus="_ComboBoxCoordonneesVille_GotFocus"
                                                                    >
                                                                    <ComboBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <VirtualizingStackPanel/>
                                                                        </ItemsPanelTemplate>
                                                                    </ComboBox.ItemsPanel>
                                                                </ComboBox>

                                                                <TextBlock 
                                                                    Text="Pays : "
                                                                    x:Name="_TextBlockCoordonneesPays" 
                                                                    Grid.Row="8" 
                                                                    Grid.Column="0"
                                                                    >
                                                                </TextBlock>
                                                                <ComboBox 
                                                                    x:Name="_ComboBoxCoordonneesPays" 
                                                                    Grid.Row="8" 
                                                                    Grid.Column="1"
                                                                    DisplayMemberPath="Libelle" 
                                                                    SelectionChanged="_ComboBoxCoordonneesPays_SelectionChanged"
                                                                    ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=PaysList}"
                                                                                    >
                                                                    <ComboBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <VirtualizingStackPanel/>
                                                                        </ItemsPanelTemplate>
                                                                    </ComboBox.ItemsPanel>
                                                                </ComboBox>
                                                            </Grid.Children>
                                                        </Grid>
                                                    </GroupBox>
                                                    <GroupBox Header="Contacts" Grid.Row="2" Grid.Column="0" x:Name="_groupBoxContacts">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                <ColumnDefinition Width="100*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.Children>
                                                                <TextBlock 
                                                                    Text="N° Téléphone : "
                                                                    x:Name="_TextBlockCoordonnéesTEL" 
                                                                    Grid.Row="0" 
                                                                    Grid.Column="0"
                                                                    >
                                                                </TextBlock>
                                                                <TextBox 
                                                                    x:Name="_TextBoxIndicatif" 
                                                                    IsReadOnly="True"
                                                                    Grid.Row="0" 
                                                                    Grid.Column="1">
                                                                </TextBox>
                                                                <TextBox 
                                                                    x:Name="_TextBoxCoordonnéesTEL" 
                                                                    Grid.Row="0" 
                                                                    Grid.Column="2"
                                                                    Text="{Binding Path=Telephone, UpdateSourceTrigger=PropertyChanged}" 
                                                                    TextChanged="_TextBoxCoordonnéesTEL_TextChanged">
                                                                </TextBox>

                                                                <TextBlock 
                                                                    Text="N° Fax : "
                                                                    x:Name="_TextBlockCoordonnéesFAX" 
                                                                    Grid.Row="2" 
                                                                    Grid.Column="0"
                                                                    >
                                                                </TextBlock>
                                                                <TextBox 
                                                                    x:Name="_TextBoxCoordonnéesFAX" 
                                                                    Grid.Row="2" 
                                                                    Grid.Column="2"
                                                                    Text="{Binding Path=Fax, UpdateSourceTrigger=PropertyChanged}" TextChanged="_TextBoxCoordonnéesFAX_TextChanged"
                                                                    >
                                                                </TextBox>

                                                                <TextBlock 
                                                                    Text="Mail : "
                                                                    x:Name="_TextBlockCoordonnéesMail" 
                                                                    Grid.Row="4" 
                                                                    Grid.Column="0"
                                                                    >
                                                                </TextBlock>
                                                                <TextBox 
                                                                    x:Name="_TextBoxCoordonnéesMail" 
                                                                    Grid.Row="4" 
                                                                    Grid.Column="2"
                                                                    Text="{Binding Path=EMail, UpdateSourceTrigger=PropertyChanged}" 
                                                                    TextChanged="_TextBoxCoordonnéesMail_TextChanged"
                                                                    >
                                                                </TextBox>
                                                            </Grid.Children>
                                                        </Grid>
                                                    </GroupBox>
                                                </Grid.Children>
                                            </Grid>
                                        </Grid.Children>
                                    </Grid>
                                    <!--Deuxième ligne-->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="20*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="40*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.Children>

                                            <CheckBox
                                                x:Name="Bouton_Client"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding Path=Is_Client}"
                                                Checked="Bouton_Client_Checked_1"
                                                Unchecked="Bouton_Client_Unchecked_1"
                                                >
                                            </CheckBox>

                                            <TextBlock
                                                    Text="Client"
                                                    x:Name="_TextBlockChoixClient"
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Left"
                                                    >
                                            </TextBlock>

                                            <CheckBox
                                                x:Name="_Bouton_Fournisseur"
                                                Grid.Column="4"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding Path=Is_Fournisseur}" 
                                                Checked="Bouton_Fournisseur_Checked_1"
                                                Unchecked="Bouton_Fournisseur_Unchecked_1">

                                            </CheckBox>

                                            <TextBlock
                                                Text="Fournisseur"
                                                x:Name="_TextBlockChoixFournisseur"
                                                Grid.Column="5"
                                                HorizontalAlignment="Left"
                                                >
                                            </TextBlock>

                                        </Grid.Children>
                                    </Grid>
                                    <!--Troisième ligne-->
                                    <Grid Grid.Row="4">
                                        <TabControl>
                                            <TabItem Header="Contacts" x:Name="_tabItemContacts" >
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="5"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="5"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Grid.Children>
                                                        <DataGrid
                                  x:Name="_dataGridContact"
                                  Grid.Row="1"
                                  Grid.Column="1"     
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="false"
                                  GridLinesVisibility="None"
                                  ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=ContactsList}"
                                  >
                                                            <DataGrid.Columns>
                                                                <DataGridTextColumn 
                    Header="Nom" 
                    Binding="{Binding Path=Nom, Mode=OneWay}"
                    Width="Auto"
                    >
                                                                </DataGridTextColumn>
                                                                <DataGridTextColumn 
                    Header="Prenom"
                    Binding="{Binding Path=Prenom, Mode=OneWay}"  
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                                <DataGridTextColumn 
                    Header="Entreprise"
                    Binding="{Binding Path=Entreprise1.Libelle, Mode=OneWay}"
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                                <DataGridTextColumn 
                    Header="Fonction"
                    Binding="{Binding Path=Contact.Contact_Fonction1.Libelle, Mode=OneWay}"
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                                <DataGridTextColumn 
                    Header="Service"
                    Binding="{Binding Path=Contact.Contact_Service1.Libelle, Mode=OneWay}" 
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                                <DataGridTextColumn 
                    Header="Tel Pro"
                    Binding="{Binding Path=NumTelFixeProAvecEspaces, Mode=OneWay}"
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                                <DataGridTextColumn 
                    Header="Portable Pro"
                    Binding="{Binding Path=NumTelPortProAvecEspaces, Mode=OneWay}"  
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                                <DataGridTextColumn 
                    Header="Email"
                    Binding="{Binding Path=EMail_Pro, Mode=OneWay}"  
                                                            Width="Auto"
                    >
                                                                </DataGridTextColumn>

                                                            </DataGrid.Columns>
                                                        </DataGrid>
                                                        <Grid
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        >
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="5"></RowDefinition>
                                                            </Grid.RowDefinitions>

                                                            <Button 
                        ToolTip="Nouveau"
                        x:Name="_ButtonContactNouveau"
                        Grid.Row="1" MaxHeight="50" MinWidth="20" MaxWidth="100" MinHeight="20" 
                        Click="_ButtonContactNouveau_Click"
                        >
                                                                <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                                                            </Button>

                                                            <Button 
                        ToolTip="Modifier"
                        x:Name="_ButtonContactModifier"
                        Grid.Row="3" MaxHeight="50" MinWidth="20" MaxWidth="100" MinHeight="20" 
                        Click="_ButtonContactModifier_Click"
                                                        
                        >
                                                                <Image Source="..\Images\icone-modifier-small.png" Height="20"></Image>
                                                            </Button>

                                                            <Button 
                        ToolTip="Supprimer"
                        x:Name="_ButtonContactSupprimer"
                        Grid.Row="5" MaxHeight="50" MinWidth="20" MaxWidth="100" MinHeight="20" 
                        Click="_ButtonContactSupprimer_Click"                        
                        >
                                                                <Image Source="..\Images\icone-supprimer-small.png" Height="20"></Image>
                                                            </Button>
                                                        </Grid>
                                                    </Grid.Children>
                                                </Grid>
                                            </TabItem>

                                            <TabItem Header="Activités" x:Name="_tabItemActivites">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                        <ColumnDefinition Width="40*"></ColumnDefinition>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                        <ColumnDefinition Width="20*"></ColumnDefinition>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                        <ColumnDefinition Width="40*"></ColumnDefinition>
                                                        <ColumnDefinition Width="5"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="0"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Grid Grid.Row="1" Grid.Column="1">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="100*"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.Children>
                                                            <ListBox 
                                                        x:Name="_ComboBoxActivite" 
                                                        Grid.Row="0" 
                                                        Grid.Column="0"
                                                        Height="200"
                                                        MinHeight="200"
                                                        MaxHeight="300"
                                                        Margin="2" 
                                                        DisplayMemberPath="Libelle" 
                                                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:EntrepriseWindow}}, Path=Secteur_Activite}"
                                                        >
                                                            </ListBox>
                                                            <Button x:Name="_newActivite" Grid.Row="1" Grid.Column="0" ToolTip="Ajouter" Click="_newActivite_Click_1">
                                                                <Image Source="..\Images\ajouter-icone-small.png" Height="20"></Image>
                                                            </Button>
                                                        </Grid.Children>
                                                    </Grid>
